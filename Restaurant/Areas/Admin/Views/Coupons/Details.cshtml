@model CouponViewModel

@{
    ViewData["Title"] = "Coupon Details";
}

<h1 class="text-primary mt-4">
    Coupon Details
</h1>

<div class="whiteBackground container border mt-4">

    <div class="">
        <div id="poster-container">
            <img style="width: 100%; height: 100%; max-height:100px;border-radius: 5px" src="@($"data:image/*;base64,{Convert.ToBase64String(Model.Picture)}")" alt="Coupon Image" class="mb-3 img-thumbnail" />
        </div>
    </div>


    <div class="row">
        <div class="col-12 col-xl-9">

            <div class="row form-group">
                <div class="col-12 col-lg-3">
                    <label asp-for="Name" class="col-form-label"></label>
                </div>
                <div class="col-12 col-lg-9 col-xl-7">
                    <input disabled asp-for="Name" class="form-control" />
                </div>
            </div>

            <div class="row form-group">
                <div class="col-12 col-lg-3">
                    <label asp-for="CouponType" class="col-form-label"></label>
                </div>
                <div class="col-12 col-lg-9 col-xl-7">
                    <input disabled asp-for="CouponType" class="form-control" />
                </div>
            </div>

            <div class="row form-group">
                <div class="col-12 col-lg-3">
                    <label asp-for="Discount" class="col-form-label"></label>
                </div>
                <div class="col-12 col-lg-9 col-xl-7">
                    <input disabled asp-for="Discount" class="form-control" />
                </div>
            </div>

            <div class="row form-group">
                <div class="col-12 col-lg-3">
                    <label asp-for="MinimumAmount" class="col-form-label"></label>
                </div>
                <div class="col-12 col-lg-9 col-xl-7">
                    <input disabled asp-for="MinimumAmount" class="form-control" />
                </div>
            </div>

            <div class="row form-group">
                <div class="col-12 col-lg-3">
                    <label asp-for="IsActive" class="col-form-label"></label>
                </div>
                <div class="col-12 col-lg-9 col-xl-7">
                    <input disabled type="checkbox" asp-for="IsActive" class="form-control" />
                </div>
            </div>

            <div class="row form-group">
                <div class="col-12 offset-lg-3 col-lg-9 col-xl-7">
                    <partial name="_EditAndBackToListButtonsPartial" model="Model.Id" />
                </div>
            </div>
        </div>
    </div>
</div>