@model ShoppingCartViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-primary mt-4">
    Menu Item Details
</h1>

<div class="whiteBackground container border mt-4">
    <form asp-action="Details" method="post">

        <input type="hidden" asp-for="MenuItemId" />

        <div class="row">

            <div class="col-12 col-xl-9">

                <div class="row form-group">
                    <div class="col-12">
                        <div class="d-xl-none">
                            <img src="@Model.MenuItem.Image" width="100%" style="border:1px solid #BBB9B9;border-radius:5px" alt="Menu Item Image" />
                        </div>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-12 col-lg-3">
                        <label asp-for="@Model.MenuItem.Name" class="text-info col-form-label"></label>
                    </div>
                    <div class="col-12 col-lg-9 col-xl-7">
                        <input disabled asp-for="MenuItem.Name" class="form-control" />
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-12 col-lg-3">
                        <label asp-for="MenuItem.Description" class="text-info col-form-label"></label>
                    </div>
                    <div class="col-12 col-lg-9 col-xl-7">
                        <div class="border p-2" style="border-radius: 5px; background-color: #e9ecef;">
                            @Html.Raw(Model.MenuItem.Description)
                        </div>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-12 col-lg-3">
                        <label asp-for="MenuItem.Price" class="text-info col-form-label"></label>
                    </div>
                    <div class="col-12 col-lg-9 col-xl-7">
                        <input disabled asp-for="MenuItem.Price" class="form-control" />
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-12 col-lg-3">
                        <label asp-for="MenuItem.CategoryId" class="text-info col-form-label"></label>
                    </div>
                    <div class="col-12 col-lg-9 col-xl-7">
                        <input disabled class="form-control" asp-for="MenuItem.Category.Name" />
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-12 col-lg-3">
                        <label asp-for="MenuItem.SubCategoryId" class="text-info col-form-label"></label>
                    </div>
                    <div class="col-12 col-lg-9 col-xl-7">
                        <input disabled class="form-control" asp-for="MenuItem.SubCategory.Name" />
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-12 col-lg-3">
                        <label asp-for="MenuItem.Spicyness" class="text-info col-form-label"></label>
                    </div>
                    <div class="col-12 col-lg-9 col-xl-7">
                        <select disabled class="form-control" asp-for="MenuItem.Spicyness" asp-items="Html.GetEnumSelectList<MenuItem.ESpicy>()">
                        </select>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-12 col-lg-3">
                        <label asp-for="Count" class="text-info col-form-label"></label>
                    </div>
                    <div class="col-12 col-lg-9 col-xl-7">
                        <input class="form-control" asp-for="Count" />
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-12 offset-lg-3 col-lg-9 col-xl-7">
                        <div class="row">
                            <div class="col-6">
                                <input type="submit" class="btn btn-primary form-control" value="Add To Shopping Carts" />
                            </div>
                            <div class="col-6">
                                <a asp-action="Index" class="btn btn-success form-control">Back To List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-none d-xl-block col-xl-3">
                <img src="@Model.MenuItem.Image" width="100%" style="border:1px solid #BBB9B9;border-radius:5px" alt="Menu Item Image" />
            </div>

        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}